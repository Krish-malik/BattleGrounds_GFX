<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#b71c1c"
                android:centerColor="#d32f2f"
                android:endColor="#c62828" />
            <corners android:radius="30dp" />
            <stroke
                android:width="2dp"
                android:color="#ff5252" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#d32f2f"
                android:centerColor="#f44336"
                android:endColor="#e57373" />
            <corners android:radius="30dp" />
            <stroke
                android:width="1dp"
                android:color="#ff8a80" />
        </shape>
    </item>
</selector>
