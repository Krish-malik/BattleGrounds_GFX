<animation-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:oneshot="false">
    <item android:duration="500">
        <shape>
            <gradient
                android:angle="0"
                android:startColor="#ff0080"
                android:centerColor="#00ff80"
                android:endColor="#8000ff"
                android:type="linear" />
        </shape>
    </item>
    <item android:duration="500">
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#00ff80"
                android:centerColor="#8000ff"
                android:endColor="#ff0080"
                android:type="linear" />
        </shape>
    </item>
    <item android:duration="500">
        <shape>
            <gradient
                android:angle="120"
                android:startColor="#8000ff"
                android:centerColor="#ff0080"
                android:endColor="#00ff80"
                android:type="linear" />
        </shape>
    </item>
</animation-list>

