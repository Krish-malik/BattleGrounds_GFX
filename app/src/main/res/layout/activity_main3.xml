<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_gaming_background"
    android:orientation="vertical"
    tools:context=".MainActivity3">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Back Button -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circular_button_gaming"
            android:text="â†"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Game Info Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/game_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/boosts"
                android:scaleType="centerCrop"
                 />

            <TextView
                android:id="@+id/game_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Custom Upload Mode"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />

        </LinearLayout>

    </LinearLayout>

    <!-- Title Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸŽ® CUSTOM FILE UPLOADER"
        android:textAlignment="center"
        android:textColor="#00FF88"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="6" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Instructions Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#1A1A2E"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:backgroundTint="#1A1A2E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‹ INSTRUCTIONS"
                        android:textColor="#00FF88"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Select Active.sav file to replace game's Active.sav\nâ€¢ Select 'file' folder to replace entire file directory\nâ€¢ Make sure to backup original saves\nâ€¢ Supported formats: .sav files and folders"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- File Selection Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#16213E"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:backgroundTint="#16213E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ SELECTION OPTIONS"
                        android:textColor="#00FF88"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Select File Button -->
                    <Button
                        android:id="@+id/select_file_button"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="ðŸ“„ SELECT ACTIVE.SAV FILE"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/gaming_button_selector"
                        android:layout_marginBottom="12dp"
                        android:elevation="4dp" />

                    <!-- Select Folder Button -->
                    <Button
                        android:id="@+id/select_folder_button"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="ðŸ“ SELECT 'FILE' FOLDER"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/gaming_folder_button_selector"
                        android:layout_marginBottom="16dp"
                        android:elevation="4dp" />

                    <!-- Selected File Display Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/selected_file_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:cardBackgroundColor="#0F3460"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="#0F3460">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@android:drawable/ic_menu_save"
                                app:tint="#00FF88" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Selected:"
                                    android:textColor="#AAAAAA"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/selected_file_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="No selection"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:maxLines="2"
                                    android:ellipsize="middle" />

                            </LinearLayout>

                            <Button
                                android:id="@+id/clear_selection_button"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:text="âœ•"
                                android:textColor="#FF4444"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:background="@drawable/circular_button_danger"
                                android:layout_marginStart="8dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Upload Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#16213E"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:backgroundTint="#16213E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸš€ UPLOAD OPTIONS"
                        android:textColor="#00FF88"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Upload Active.sav Button -->
                    <Button
                        android:id="@+id/upload_active_sav_button"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="ðŸ“„ UPLOAD AS ACTIVE.SAV"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/gaming_upload_button_selector"
                        android:enabled="false"
                        android:layout_marginBottom="12dp"
                        android:elevation="4dp" />

                    <!-- Upload Folder Button -->
                    <Button
                        android:id="@+id/upload_folder_button"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="ðŸ“ UPLOAD AS 'FILE' FOLDER"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/gaming_folder_upload_button_selector"
                        android:enabled="false"
                        android:elevation="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="âš ï¸ This will replace existing files in the game directory"
                        android:textColor="#FFAA00"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"
                        android:textStyle="italic" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Status/Info Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#1A1A2E"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:backgroundTint="#1A1A2E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â„¹ï¸ COMPATIBILITY INFO"
                        android:textColor="#00FF88"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="wrap_content"
                            android:text="âœ…"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Android 11+: Uses Shizuku for better access"
                            android:textColor="#CCCCCC"
                            android:textSize="14sp"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="wrap_content"
                            android:text="âœ…"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Android 10 and below: Uses SAF (Storage Access Framework)"
                            android:textColor="#CCCCCC"
                            android:textSize="14sp"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’¾"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Supports .sav files and other save game formats"
                            android:textColor="#CCCCCC"
                            android:textSize="14sp"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Footer with gaming accent -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/footer_gaming_gradient"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âš¡ GAMING TOOL SUITE âš¡"
            android:textColor="#00FF88"
            android:textSize="14sp"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3" />

    </LinearLayout>

</LinearLayout>